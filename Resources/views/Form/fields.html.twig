{% block markdown_widget %}
    {% spaceless %}
        <div class="markdown">
            <p class="muted">
                Need help writing Markdown?
                <a href="http://daringfireball.net/projects/markdown/syntax" target="_blank">Daring Fireball has a list
                    of available syntax.</a>
            </p>
            <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
        </div>
    {% endspaceless %}
{% endblock markdown_widget %}